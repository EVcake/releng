#!/bin/sh

mode=link

argv=()
while [[ $# > 0 ]]; do
  arg="$1"

  case "$arg" in
    -c|-E)
      mode=compile
      ;;
  esac

  argv+=("$arg")
  shift
done

case $mode in
  compile)
    argv+=("-nostdinc++" "-isystem@frida_sdkroot@/include/c++")
    ;;
  link)
    argv+=("-nostdlib++" "-L@frida_sdkroot@/lib/c++" "-lc++" "-lc++abi")
    ;;
esac

exec "@driver@" -isysroot "@sysroot@" -arch "@arch@" "${argv[@]}"
